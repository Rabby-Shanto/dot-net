@using Ecommerce.WebApp.Models.ProductList;

@model ProductListViewModel

@{
    int slNo = 0;
}

<h4>Product List</h4>

<a asp-action="Create" class="btn btn-primary">Add New </a>


<div>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Size</th>

                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model.productLists)
            {
                <tr>
                    <td>@(++slNo)</td>
                    <td>@product.ProductName</td>
                    <td>@product.price</td>
                    <td>@product.size</td>
                    <td>View |<a asp-action="Edit" asp-route-id="@product.Id">Edit</a>  | Remove </td>
                </tr>
            }
        </tbody>
    </table>

</div>